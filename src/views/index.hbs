<div class="col-md-6 offset-md-3 custom-form">
  <div class="card">
    <div class="card-header">
      <h3>
        Tasks
      </h3>
    </div>
    <div class="card-body">
      {{#if contacts}}
        <ul class="list-group">
          {{#each contacts}}
            <li
              class="list-group-item d-flex justify-content-between align-items-center"
            >
              {{firstname}}
              {{lastname}}
              |
              {{email}}
              |
              {{phone}}
              <a
                class="btn btn-outline-secondary"
                href="/delete-contact/{{@key}}"
              >
                Delete
              </a>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p>No contacts yet.</p>
      {{/if}}
    </div>
    <div class="card-footer">
      <form action="/new-contact" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="firstname"
            placeholder="First Name"
            class="form-control"
            autofocus
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            name="lastname"
            placeholder="Last Name"
            class="form-control"
            autofocus
          />
        </div>
        <div class="form-group">
          <input
            type="email"
            name="email"
            placeholder="email"
            class="form-control"
            autofocus
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            name="phone"
            placeholder="Phone"
            class="form-control"
            autofocus
          />
        </div>
        <button class="btn btn-primary btn-block">
          Add
        </button>
      </form>
    </div>
  </div>
</div>